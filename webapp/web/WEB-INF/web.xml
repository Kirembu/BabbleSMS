    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IncomingPie</servlet-name>
        <url-pattern>/account/incomingPie</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OutgoingPie</servlet-name>
        <url-pattern>/account/outgoingPie</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Loggin</servlet-name>
        <url-pattern>/Loggin</url-pattern>
    </servlet-mapping>
