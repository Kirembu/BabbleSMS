    <servlet-mapping>
        <servlet-name>Upload</servlet-name>
        <url-pattern>/account/uploadFile</url-pattern>
    </servlet-mapping>
    
    <!-- Servlet mapping end -->
    
    
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
