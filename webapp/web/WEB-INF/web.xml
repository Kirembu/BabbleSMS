        <servlet-name>addnetwork</servlet-name>
        <url-pattern>/addnetwork</url-pattern>
    </servlet-mapping>-->
    <servlet-mapping>
        <servlet-name>addshortcode</servlet-name>
        <url-pattern>/addshortcode</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
